generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String        @id @default(uuid())
  title       String
  location    String
  description String
  eventDate   DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  category    EventCategory @default(CONFERENCE)

  @@index([eventDate])
}

enum EventCategory {
  CONFERENCE
  MEETUP
  WORKSHOP
  WEBINAR
  SOCIAL
}
